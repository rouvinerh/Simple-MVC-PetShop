@model PetShop.Models.AnimalSpeciesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Admin Interface</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Admin" asp-action="Index" method="get">
    <p>

        <select asp-for="AnimalSpecies" asp-items="Model.Species">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].GetDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animals![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Animals!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
